CREATE DATABASE townhall_db;
GO

USE townhall_db;
GO

CREATE TABLE users (
    id INT IDENTITY(1,1) PRIMARY KEY, -- "Identity" is the MS SQL version of Auto Increment
    first_name NVARCHAR(100) NOT NULL,
    middle_name NVARCHAR(100),
    last_name NVARCHAR(100) NOT NULL,
    pesel NVARCHAR(11) UNIQUE,
    phone_number NVARCHAR(20),
    email NVARCHAR(255) UNIQUE NOT NULL,
    password_hash NVARCHAR(255) NOT NULL,
    role NVARCHAR(20) DEFAULT 'Citizen' CHECK (role IN ('Citizen', 'Official', 'Admin')),
    is_active BIT DEFAULT 0,          -- MS SQL uses "BIT" for boolean (0/1)
    created_at DATETIME DEFAULT GETDATE()
);
GO


